<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %><br>
  <br>
  <%= f.label :genre_id %><br>
  <%= f.collection_select :genre_id, Genre.all, :name, :name %><br>
  <br>
  <%= f.fields_for :notes do |content| %>
    <%= content.text_field :content_1 %><br>
    <%= content.text_field :content_2 %><br>
    <%= content.text_field :content_3 %><br>
  <% end %>
  <%= f.submit %>
<% end %>
